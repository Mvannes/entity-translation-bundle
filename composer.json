{
    "name":        "hostnet/entity-translation-bundle",
    "description": "Translation bundle to help with rendering pretty names for enum-like classes.",
    "license":     "MIT",
    "authors": [
        {
            "name":  "Iltar van der Berg",
            "email": "ivanderberg@hostnet.nl"
        },
        {
            "name":  "Yannick de Lange",
            "email": "ydelange@hostnet.nl"
        }
    ],

    "require": {
        "php"                           : ">=5.4",
        "sensio/framework-extra-bundle" : "3.*",
        "symfony/translation"           : "2.*, >=2.3",
        "symfony/yaml"                  : "2.*, >=2.3"
    },

    "require-dev": {
        "phpunit/phpunit": "4.*"
    },

    "minimum-stability": "stable",

    "autoload": {
        "psr-4" : {
            "Hostnet\\Bundle\\EntityTranslationBundle\\" : "src/"
        }
    },

    "autoload-dev": {
        "psr-4" : {
            "Hostnet\\Bundle\\EntityTranslationBundle\\" : "test/"
        }
    }
}
